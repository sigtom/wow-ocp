# Bitwarden Lite Environment Variables
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Installation credentials from environment variables

# Domain Configuration
BW_DOMAIN=https://{{ bitwarden_domain }}

# Database Configuration (SQLite)
BW_DB_PROVIDER=sqlite
BW_DB_FILE=/etc/bitwarden/vault.db

# Installation Credentials (from https://bitwarden.com/host/)
BW_INSTALLATION_ID={{ bitwarden_installation_id }}
BW_INSTALLATION_KEY={{ bitwarden_installation_key }}

# Admin Configuration
BW_ADMIN_EMAIL={{ bitwarden_admin_email | default('tec.thor@gmail.com') }}

# Optional: Timezone
TZ=America/New_York
